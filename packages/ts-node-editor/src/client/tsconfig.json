{
  "extends": "./../../tsconfig.json",
  "include": [
    "src/client/**/*"
  ],
  "compilerOptions": {
    "outDir": "./../../dist/client",
    "baseUrl": ".",
    "composite": true,
    "module": "ES6",
    "moduleResolution": "Node",
    "target": "ES6",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "node",
      "jest",
      "@pictogrammers/element-jest"
    ],
    "paths": {
      "@pictogrammers/element": [
        "./node_modules/@pictogrammers/element"
      ]
    }
  }
}